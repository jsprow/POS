{
  "name": "rewards_app",
  "productName": "Rewards App",
  "version": "0.7.0",
  "description": "Repleotech POS integration for loyalty programs",
  "license": "MIT",
  "repository": "jsprow/POS",
  "author": "Repleotech",
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "pack": "electron-packager . --out=dist --asar --overwrite --arch=x64 --platform=win32,darwin",
    "dist": "build --win --ia32"
  },
  "files": [
    "index.js",
    "index.html",
    "log.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "d": "^1.0.0",
    "electron-debug": "^1.0.0",
    "electron-log": "^2.2.6",
    "electron-updater": "^1.16.0",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.6.10",
    "electron-builder": "^18.3.0",
    "electron-packager": "^8.7.0",
    "xo": "^0.18.2"
  },
  "build": {
    "appId": "com.github.jsprow.rewards_app",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
