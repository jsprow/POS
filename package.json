{
  "name": "rewards_app",
  "productName": "Rewards App",
  "version": "0.1.8",
  "description": "Repleotech POS integration for loyalty programs",
  "license": "MIT",
  "repository": "jsprow/POS",
  "author": "Repleotech",
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "pack": "electron-packager . --out=dist --asar --overwrite --arch=x64 --platform=win32,darwin",
    "dist": "build --win --ia32"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^1.0.0",
    "electron-log": "^1.3.0",
    "electron-updater": "^1.10.4",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.0.1",
    "electron-builder": "^15.6.2",
    "electron-packager": "^8.0.0",
    "xo": "^0.16.0"
  },
  "build": {
    "appId": "com.github.jsprow.rewards_app",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
